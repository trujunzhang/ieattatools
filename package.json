{
    "name": "@app/tools",
    "version": "1.0.1",
    "private": false,
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "types": "dist/__types__/index.d.ts",
    "scripts": {
        "test.global": "jest --env=node --colors --coverage test",
        "fix": "prettier --no-semi --single-quote --write '**/*.ts{,x}'",
        "build.copy.tld": "cpx \"./src/vendor/parse-domain/tld.js\" ./dist/vendor/parse-domain",
        "build:post": "yarn build.copy.tld",
        "build:reset": "rm -rf dist",
        "build:clean": "yarn build:reset",
        "build:types": "rm -rf dist/__types__ && tsc --emitDeclarationOnly -p tsconfig.lib.json",
        "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --ignore \"**/__tests__\" --source-maps inline",
        "build:all": "yarn build:types && yarn build:js",
        "build-lib": "yarn build:clean && yarn build:all && yarn build:post",
        "postinstall.pending": "yarn build-lib"
    },
    "files": [
        "src/",
        "dist/",
        "types/"
    ],
    "dependencies": {
        "axios": "0.19.2",
        "camelcase": "5.3.1",
        "color": "1.0.3",
        "cpx": "1.5.0",
        "lodash": "4.17.15",
        "moment": "2.24.0",
        "numeral": "2.0.6",
        "query-string": "6.11.1",
        "rand-token": "0.4.0",
        "route-parser": "0.0.5",
        "slugify": "1.4.0",
        "underscore": "1.9.2",
        "validate.js": "0.13.1"
    },
    "peerDependencies": {},
    "devDependencies": {
        "@babel/compat-data": "7.8.0",
        "@babel/plugin-proposal-numeric-separator": "^7.8.3",
        "@babel/cli": "7.8.4",
        "@babel/core": "7.8.6",
        "@babel/plugin-proposal-class-properties": "7.8.3",
        "@babel/plugin-proposal-decorators": "7.8.3",
        "@babel/plugin-proposal-object-rest-spread": "7.8.3",
        "@babel/plugin-transform-runtime": "7.8.3",
        "@babel/polyfill": "7.8.3",
        "@babel/preset-env": "7.8.6",
        "@babel/preset-typescript": "7.8.3",
        "@babel/runtime": "7.4.3",
        "@types/jest": "^25.1.4",
        "@types/node": "13.7.7",
        "@types/query-string": "6.3.0",
        "@types/route-parser": "0.1.3",
        "@types/sinon": "7.5.2",
        "@types/underscore": "1.9.4",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "24.1.0",
        "babel-plugin-module-resolver": "4.0.0",
        "enzyme": "^3.11.0",
        "jest": "24.1.0",
        "sinon": "9.0.0",
        "typescript": "3.2.2"
    }
}
